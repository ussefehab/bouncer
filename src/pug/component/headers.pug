ul.header__mobile   
    li.smb
        a(href="#" class="header__profile alignv") 
            svg(class="header__icon sm")
                use(xlink:href="../../../dist/sprite.svg#icon-user-o")
            span My profile 
    each item in navItems
      li.nav__li
        if item == "Accessories"
          a.nav__item(href="#" class="products-link") #{item}
        if item !==  "Accessories" & item !== "Home"      
          a.nav__item(href="#"+item) #{item}  
        if item == "Home"
            .mega    
                a.nav__item(href="#"+item class=`${item}`) #{item}  
                    svg(class="header__arrow")
                        use(xlink:href="../../../dist/sprite.svg#icon-triangle-down")               
                each column in megaMenuContent
                    .header__mobile-mega.hidden
                        p(class="heading--three header__mobile--category" id=`${column.id}`)= column.title
                            svg(class="header__arrow")
                                use(xlink:href="../../../dist/sprite.svg#icon-triangle-down")
                        ul(class="header__mobile--list" id=`${column.idl}`).hidden
                            each link in column.links
                                li
                                    a.header__mobile--link(href="index.html") #{link}



                                                